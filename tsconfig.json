{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@interfaces": ["interfaces"],
      "@loaders": ["loaders"],
      "@structures/*": ["structures/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
