{
  "name": "nocronok",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:src",
    "build:src": "tsc && tsc-alias -p tsconfig.json",
    "start": "node -r dotenv/config dist/index.js",
    "start:dev": "dotenv -v DOTENV_CONFIG_PATH=.env.development nodemon src/index.ts",
    "dev:database-url": "pwsh -ExecutionPolicy ByPass -NoProfile -Command \"pnpm exec dotenv -v DATABASE_URL=$(pnpm exec dotenv -e .env.development ts-node -r dotenv/config ./scripts/getLocalhostDatabaseUrl.ts localhost)\"",
    "migrate:dev": "yarn dev:database-url prisma migrate dev",
    "migrate:dev:status": "yarn dev:database-url pnpm run migrate:status",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:status": "prisma migrate status"
  },
  "license": "BSD-4-Clause",
  "dependencies": {
    "@discordjs/builders": "^1.6.4",
    "@prisma/client": "^5.3.1",
    "cross-fetch": "^4.0.0",
    "discord.js": "^14.11.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "pino": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.5",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^6.2.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.9.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.3.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  },
  "optionalDependencies": {
    "pino-pretty": "^10.2.0"
  }
}
